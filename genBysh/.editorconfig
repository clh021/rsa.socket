# EditorConfig is awesome: https://EditorConfig.org

# -------------------------------------------------------------------------------------------------
# Default configuration
# -------------------------------------------------------------------------------------------------
# top-most EditorConfig file
root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true


# -------------------------------------------------------------------------------------------------
# Scripts
# -------------------------------------------------------------------------------------------------

[*.sh]
indent_style = tab
indent_size = 4

[bin/ca-gen]
indent_style = tab
indent_size = 4

[bin/cert-gen]
indent_style = tab
indent_size = 4


# -------------------------------------------------------------------------------------------------
# Git Repository
# -------------------------------------------------------------------------------------------------
[.travis.yml]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4


# -------------------------------------------------------------------------------------------------
# Documentation
# -------------------------------------------------------------------------------------------------
[*.md]
indent_style = space
trim_trailing_whitespace = false
indent_size = 2
